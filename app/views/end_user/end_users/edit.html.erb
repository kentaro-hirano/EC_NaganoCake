<div class="container">
  <div class="row">
    <div class="col-md">
      <h2 class= "mt-4 mb-5">会員情報編集</h2>
      <%= form_with model: @end_user, url: end_user_path(current_end_user, method: :patch) do |f| %>
      <table class= "">
        <tr>
          <th><%= f.label :"氏名", class: "mr-5" %></th>
          <td>
            <div class="form-group form-inline">
              <%= f.text_field :first_name, class: "form-control" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th><%= f.label :"フリガナ", class: "mr-5" %></th>
          <td>
            <div class="form-group form-inline">
              <%= f.text_field :kana_first_name, class: "form-control" %>
              <%= f.text_field :kana_last_name, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th><%= f.label :"郵便番号", class: "mr-5" %></th>
          <td>
            <div class="form-group form-inline">
               <%= f.text_field :postal_code, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th><%= f.label :"住所", class: "mr-5" %></th>
          <td>
            <div class="form-group form-inline">
               <%= f.text_field :address, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th><%= f.label :"電話番号", class: "mr-5" %></th>
          <td>
            <div class="form-group form-inline">
               <%= f.text_field :phone_number, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th><%= f.label :"メールアドレス", class: "mr-5" %></th>
          <td>
            <div class="form-group form-inline">
               <%= f.email_field :email, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success w-50" %></td>
        </tr>
      </table>
     
      <% end %>
    </div>
  </div>
</div>