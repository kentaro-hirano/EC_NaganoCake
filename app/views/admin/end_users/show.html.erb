<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3 class= "mt-3 mb-5"><%= "#{@end_user.first_name}#{@end_user.last_name}さんの会員詳細" %></h3>
      <table class= "table">
        <tr>
          <th>会員id</th>
          <td><%= @end_user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= "#{@end_user.first_name}#{@end_user.last_name}" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= "#{@end_user.kana_first_name}#{@end_user.kana_last_name}" %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @end_user.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @end_user.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @end_user.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @end_user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @end_user.is_vaild == false %>
              <p class= "text-success">有効</p>
            <% else %>
              <p>退会済み</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md text-center">
      <%= link_to "編集する", edit_admin_end_user_path(@end_user), class: "btn btn-success" %>
      <%= link_to '注文履歴一覧を見る', end_user_orders_admin_end_user_path(@end_user), class: "btn btn-primary" %>
    </div>
  </div>
</div>