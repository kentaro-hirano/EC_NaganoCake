<div class="container">
  <div class="row">
    <div class="col-md">
      <h3 class= "mt-3 mb-4">商品一覧(全<%= @items.count %>件)</h3>
      <div class= "d-flex justify-content-between">
        <% @items.each do |item| %>
          <div class= "text-center">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, fallback: "no-image.png", size: "200x200" %>
            <% end %>
            <p class= "mb-0 mt-3"><%= item.name %></p>
            <p>¥<%= item.price %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>